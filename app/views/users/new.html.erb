<h1>sign up</h1>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="user-content" >
	<ul>
		<li>keep score of your votes</li>
		<li>find your recent convos and comments</li>
		<li>more features coming soon!</li>
		<br>
		<li>this information is only available to you, and you can still be anonymous</li>
		<li>registration is totally optional</li>
	</ul>

	<%= form_for @user do |f| %>

		<p><%= f.email_field :email, placeholder: "email" %></p>
		<p><%= f.password_field :password, placeholder: "password" %></p>
		<p><%= f.password_field :password_confirmation, placeholder: "confirm password" %></p>
		<p><%= f.submit "submit" %></p>

	<% end %>
	<small class="metadata">By using this site, you agree to our <a href="/tos" class="highlight" target="_blank">Terms</a></small>

<!-- Status message after password reset submit. This doesn't work right now -->
	<% flash.each do |key, value| %>
		<div class="flash <%= key %>"><%= value %></div>
	<% end %>

</div>
