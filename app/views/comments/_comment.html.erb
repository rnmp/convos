<article class="convo<%= ' hidden' if comment.points < -5 %>" id="comment-<%= comment.id %>">
  <div class="user-content"><%= markdown comment.comment %></div>
  <p class="metadata">
    <span class="vote-links<%= " disabled" if current_user && current_user.voted_on?(comment) %>">
      <%= link_to 'upvote', upvote_comment_path(comment), remote: true, 
        class: 'upvote'+(' active' if current_user && current_user.voted_for?(comment)).to_s, 
        data: { item_type: comment.class.to_s.downcase, item_id: comment.id } %>
      <%= link_to 'downvote', downvote_comment_path(comment), remote: true, 
        class: 'downvote'+(' active' if current_user && current_user.voted_against?(comment)).to_s, 
        data: { item_type: comment.class.to_s.downcase, item_id: comment.id } %>
    </span>
	  <% from_reply_form ||= nil %>
	  <% unless from_reply_form %>
	    <a href="#reply_to_<%= comment.id %>" class="highlight show-reply-form">reply</a> |
    <% end %>
    <%= link_to pluralized_points_for(comment), 
      "#comment-#{comment.id}", title: 'Permalink to comment' %> |
    <%= link_to time_ago_in_words(comment.created_at)+' ago', 
      "#comment-#{comment.id}", title: 'Permalink to comment' %>
    <% if comment.edited? %>(edited)<% end %>
    by <% if comment.author? %><%= comment.author %><% else %>someone<% end %>
    <% if comment.user && comment.user == current_user %>
      | <%= link_to 'edit', edit_comment_path(comment) %>
      | <%= link_to 'delete', comment, :method => :delete %>
    <% end %>
  </p>
</article>
