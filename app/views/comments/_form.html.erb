<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :convo_id %>
  <%= f.hidden_field :parent_id %>
  <div class="field">
    <%= f.text_area :comment, :maxlength => 10000 %>
  </div>

<a href="#" id='formatting_help_link'><small>Formatting help</small></a>

<a href="#" id='formatting_help_hide' style="display:none"><small>Hide formatting help</small></a>

<div id="formatting_help" style="display:none"><table class="md"><tr style="background-color: #ee1b2c; text-align: center"><td><em><font color="#fffffe">you type:</font color></em></td><td><em><font color="#fffffe">you see:</font color></em></td></tr><tr><td>*italics*</td><td><em>italics</em></td></tr><tr><td>**bold**</td><td><b>bold</b></td></tr><tr><td>[convos](http://convos.org)</td><td><a href="http://convos.org">convos</a></td></tr><tr><td>* item 1<br/>* item 2<br/>* item 3</td><td><ul><li>item 1</li><li>item 2</li><li>item 3</li></ul></td></tr><tr><td>&gt; quoted text</td><td><blockquote>quoted text</blockquote></td></tr><tr><td>~~strikethrough~~</td><td><strike>strikethrough</strike></td></tr><tr><td>super^script</td><td>super<sup>script</sup></td></tr></table></div>


  <div class="field">
    <%= f.text_field :author, placeholder: 'sign it (optional)' %>
  </div>
  <div class="actions">
    <%= f.submit 'submit' %>
  </div>
<% end %>
