<p id="notice"><%= notice %></p>

<h1>comments <%= form_tag(comments_path, :method => "get") do %><%= text_field_tag :search, params[:search], placeholder: "search", type: 'search' %><% end %><%= link_to 'clear', comments_path if params[:search]%></h1>

<% if params[:search] %>
  <p>Youâ€™ve searched for: <mark><%= params[:search] %></mark></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>convo</th>
      <th>points</th>
      <th>comment</th>
      <th>author</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= link_to comment.convo.title, convo_path(comment.convo_id) %></td>
        <td><%= comment.points %></td>
        <td><%= highlight comment.comment, params[:search] %></td>
        <td><%= comment.author %></td>
        <td><%= link_to 'show', convo_path(comment.convo_id, anchor: "comment-#{comment.id}") %></td>
        <td><%= link_to 'edit', edit_comment_path(comment) %></td>
        <td><%= link_to 'destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @comments %>