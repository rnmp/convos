<h1>log in</h1>
<% flash.each do |key, value| %>
	<aside class="alert alert-<%= key %>"><%= value %></aside>
<% end %>
<%= form_tag '/login' do |f| %>

	<div class="user-content">
		<p><%= email_field_tag :email,'', placeholder: "email" %></p>
		<p><%= password_field_tag :password,'', placeholder: 'password' %></p>
		<p><%= link_to "forgot your password?", new_password_reset_path %></p>
		<p><%= submit_tag "submit" %></p>
	</div>

<% end %>
